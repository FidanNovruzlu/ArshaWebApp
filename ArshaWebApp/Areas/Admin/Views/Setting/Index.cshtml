
@{
    int count = 0;
}
@model List<Setting>

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Setting</h4> </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
          
            <ol class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">Setting</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Key</th>
                                <th>Value</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Setting item in Model)
                            {
                                    <tr>
                                        <td>@(++count)</td>
                                       
                                        <td>@item.Key</td>
                                        <td>@item.Value</td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@item.Id" asp-controller="Setting">
                                                <button class="btn btn-success">Edit</button>
                                            </a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
         
        </div>
    </div>
</div>